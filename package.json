{
  "name": "webhook-relay",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "prepare": "npm run build",
    "start": "node dist/index.js",
    "start:dev": "babel-node ./src/index",
    "lint": "eslint src",
    "lint:dev": "eslint --fix src",
    "test:base": "cross-env NODE_ENV=test mocha --require @babel/register --reporter-option maxDiffSize=15000 src/**/*.spec.js",
    "test": "npm run lint && npm run test:base",
    "test:dev": "clear && npm run lint:dev && npm run coverage",
    "build": "babel src --source-maps --copy-files --delete-dir-on-start --out-dir=dist",
    "dev": "cross-env DEBUG=@natlibfi/* NODE_ENV=development nodemon",
    "dev:test": "cross-env DEBUG=@natlibfi/* NODE_ENV=test nodemon -w src -w test-fixtures --exec 'npm run test:dev'"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@babel/runtime": "^7.20.0",
    "@natlibfi/melinda-backend-commons": "^2.1.0",
    "@natlibfi/melinda-commons": "^12.0.5",
    "debug": "^4.3.4",
    "express": "^4.18.2",
    "http-status": "^1.5.3",
    "node-fetch": "^2.6.7"
  },
  "devDependencies": {
    "@babel/cli": "latest",
    "@babel/core": "latest",
    "@babel/eslint-parser": "latest",
    "@babel/node": "latest",
    "@babel/preset-env": "latest",
    "@babel/register": "latest",
    "@natlibfi/eslint-config-melinda-backend": "^2.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.14.0",
    "nodemon": "^2.0.16"
  },
  "eslintConfig": {
    "extends": "@natlibfi/melinda-backend"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": "maintained node versions"
        }
      ]
    ]
  },
  "nodemonConfig": {
    "exec": "DEBUG=@natlibfi* npm run lint:dev && npm run start:dev",
    "watch": [
      "src/*",
      "package.json"
    ],
    "ext": "js",
    "delay": 2.5
  }
}
